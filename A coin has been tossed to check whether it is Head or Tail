#include <stdio.h>

int main() {
    char toss;
    printf("Enter result of the coin toss (H for Head, T for Tail): ");
    scanf(" %c", &toss);  
    if (toss == 'H' || toss == 'h') {
        printf("It's a Head.\n");
    }

    if (toss == 'T' || toss == 't') {
        printf("It's a Tail.\n");
    }

    if (toss != 'H' && toss != 'h' && toss != 'T' && toss != 't') {
        printf("Invalid input. Please enter H or T.\n");
    }

    return 0;
}
